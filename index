<script>
  // üîß Exemple d'articles (√† g√©n√©rer automatiquement depuis ton Excel ensuite)
  // code = par ex. ton "code Extrabat", label = d√©signation, unitPrice = prix unitaire HT, tva = taux
  const ARTICLES = [
    { code: "ELEC_PLAQUE_32A", label: "Circuit plaque de cuisson 32 A (fourniture + pose)", unitPrice: 180, tva: 0.20 },
    { code: "ELEC_LV_20A", label: "Circuit lave-vaisselle 20 A (fourniture + pose)", unitPrice: 150, tva: 0.20 },
    { code: "ELEC_PC_SIMPLE", label: "Prise de courant simple 16 A", unitPrice: 45, tva: 0.20 },
    { code: "ELEC_ECL_POINT", label: "Point lumineux (fourniture + pose)", unitPrice: 55, tva: 0.10 },
    { code: "ELEC_TABLEAU", label: "Mise en conformit√© tableau de r√©partition", unitPrice: 280, tva: 0.10 }
  ];

  function formatCurrency(value) {
    return value.toLocaleString("fr-FR", {
      style: "currency",
      currency: "EUR",
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    });
  }

  function populateArticleSelect(selectEl) {
    // Efface tout sauf la premi√®re option
    selectEl.innerHTML = '<option value="">-- Choisir un article --</option>';
    ARTICLES.forEach((article, index) => {
      const opt = document.createElement("option");
      opt.value = index.toString();
      opt.textContent = article.label;
      selectEl.appendChild(opt);
    });
  }

  function attachLineEvents(tr) {
    const select = tr.querySelector(".article-select");
    const codeDiv = tr.querySelector(".article-code");
    const qtyInput = tr.querySelector(".qty-input");
    const unitPriceInput = tr.querySelector(".unit-price-input");
    const tvaSelect = tr.querySelector(".tva-select");
    const removeBtn = tr.querySelector(".remove-line");

    select.addEventListener("change", () => {
      const idx = select.value !== "" ? parseInt(select.value, 10) : null;
      if (idx != null && !Number.isNaN(idx) && ARTICLES[idx]) {
        const article = ARTICLES[idx];
        unitPriceInput.value = article.unitPrice.toString().replace(".", ",").replace(",", ".");
        tvaSelect.value = article.tva.toString();
        codeDiv.textContent = article.code ? article.code : "";
      } else {
        codeDiv.textContent = "";
      }
      updateTotals();
    });

    qtyInput.addEventListener("input", updateTotals);
    unitPriceInput.addEventListener("input", updateTotals);
    tvaSelect.addEventListener("change", updateTotals);

    removeBtn.addEventListener("click", () => {
      const tbody = document.getElementById("line-items");
      const lines = tbody.querySelectorAll(".line-item");
      if (lines.length > 1) {
        tr.remove();
        updateTotals();
      }
    });
  }

  function updateTotals() {
    const lineRows = document.querySelectorAll("#line-items .line-item");
    let totalHT = 0;
    let totalTTC = 0;

    lineRows.forEach(tr => {
      const qtyInput = tr.querySelector(".qty-input");
      const unitPriceInput = tr.querySelector(".unit-price-input");
      const tvaSelect = tr.querySelector(".tva-select");
      const cellHT = tr.querySelector(".line-total-ht");
      const cellTTC = tr.querySelector(".line-total-ttc");

      const qty = parseFloat((qtyInput.value || "0").replace(",", ".")) || 0;
      const unitPrice = parseFloat((unitPriceInput.value || "0").replace(",", ".")) || 0;
      const tva = parseFloat(tvaSelect.value || "0") || 0;

      const lineHT = qty * unitPrice;
      const lineTTC = lineHT * (1 + tva);

      totalHT += lineHT;
      totalTTC += lineTTC;

      cellHT.innerHTML = formatCurrency(lineHT).replace("‚Ç¨", "&nbsp;‚Ç¨");
      cellTTC.innerHTML = formatCurrency(lineTTC).replace("‚Ç¨", "&nbsp;‚Ç¨");
    });

    const totalTVA = totalTTC - totalHT;

    document.getElementById("total-ht").innerHTML = formatCurrency(totalHT).replace("‚Ç¨", "&nbsp;‚Ç¨");
    document.getElementById("total-tva").innerHTML = formatCurrency(totalTVA).replace("‚Ç¨", "&nbsp;‚Ç¨");
    document.getElementById("total-ttc").innerHTML = formatCurrency(totalTTC).replace("‚Ç¨", "&nbsp;‚Ç¨");
  }

  function addNewLine() {
    const tbody = document.getElementById("line-items");
    const firstLine = tbody.querySelector(".line-item");
    const newLine = firstLine.cloneNode(true);

    // R√©initialise les champs
    newLine.querySelector(".article-select").value = "";
    newLine.querySelector(".article-code").textContent = "";
    newLine.querySelector(".qty-input").value = "1";
    newLine.querySelector(".unit-price-input").value = "0";
    newLine.querySelector(".tva-select").value = "0.20";
    newLine.querySelector(".line-total-ht").innerHTML = "0,00&nbsp;‚Ç¨";
    newLine.querySelector(".line-total-ttc").innerHTML = "0,00&nbsp;‚Ç¨";

    attachLineEvents(newLine);
    tbody.appendChild(newLine);
    updateTotals();
  }

  function resetForm() {
    // R√©initialise les inputs texte
    document.getElementById("client").value = "";
    document.getElementById("chantier").value = "";
    document.getElementById("email").value = "";
    document.getElementById("tel").value = "";

    // R√©initialise les lignes
    const tbody = document.getElementById("line-items");
    const allLines = Array.from(tbody.querySelectorAll(".line-item"));
    const firstLine = allLines[0];

    allLines.slice(1).forEach(tr => tr.remove());

    firstLine.querySelector(".article-select").value = "";
    firstLine.querySelector(".article-code").textContent = "";
    firstLine.querySelector(".qty-input").value = "1";
    firstLine.querySelector(".unit-price-input").value = "0";
    firstLine.querySelector(".tva-select").value = "0.20";
    firstLine.querySelector(".line-total-ht").innerHTML = "0,00&nbsp;‚Ç¨";
    firstLine.querySelector(".line-total-ttc").innerHTML = "0,00&nbsp;‚Ç¨";

    updateTotals();
  }

  // Initialisation
  document.addEventListener("DOMContentLoaded", () => {
    const firstLine = document.querySelector("#line-items .line-item");
    populateArticleSelect(firstLine.querySelector(".article-select"));
    attachLineEvents(firstLine);
    updateTotals();

    document.getElementById("add-line").addEventListener("click", addNewLine);
    document.getElementById("reset-form").addEventListener("click", resetForm);
  });
</script>

</body>
</html>
